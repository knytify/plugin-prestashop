{% extends '@!PrestaShop/Admin/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="card login" id="knytify">
        <div class="card-body card-block">

            <div class="btn-holder">
                <a href="{{getting_started_link}}" class="knyt-btn">Other authentication methods</a>
            </div>
            
            <p class="card-title">
                <img src="/modules/knytify/logo.png"/>
            </p>

            {% if success  %}

                <p class="card-title">
                    Account associated successfully !<br/><br/>
                    <a href="{{configuration_link}}">Go to configuration page.</a>
                </p>

            {% else %}

                <p class="card-title">
                    Associate your Knytify account with your Api-Key.
                </p>

                {% if error %}
                    <p class="card-title">
                        An error happened during the log-in process: <br/>
                        {{error}}
                    </p>
                {% endif %}

                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}

            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}



